{
  "manifest_version": 3,
  "name": "Face Detection Plugin",
  "version": "1.0",
  "description": "Detect faces in images using Face-API.js",
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": ["models/*"],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "face-api.js",
        "contentscript.js"
      ],
      "match_about_blank": true,
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/logo-16.png",
      "32": "icons/logo-32.png",
      "48": "icons/logo-48.png",
      "128": "icons/logo-128.png"
    }
  }
}
